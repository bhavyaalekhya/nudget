{
  "name": "nudget-desktop",
  "version": "1.0.0",
  "main": "electron.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build:all": "electron-builder --mac --win --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.nudget.desktop",
    "productName": "Nudget",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron.js",
      "frontend/out/**",
      "backend/**",
      "node_modules/**",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "wait-on": "^8.0.3"
  }
}
