generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Expense {
  id Int @id @default(autoincrement())
  name String
  amount Float
  category String
  date DateTime
  mode String
}

model Income {
  id Int @id @default(autoincrement())
  name String
  amount Float
  category String
  date DateTime
}

